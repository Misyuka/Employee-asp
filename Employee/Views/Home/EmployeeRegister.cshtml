@model Employee.Models.Account.EmployeeRegisterViewModel

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Department Register";
}

<div class="header">
    <div class="page-title">@ViewData["Title"]</div>
</div>
<div class="form-container">
	<form method="post" action="EmployeeRegister">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="input" type="text" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="DM"></label>
			<input asp-for="DM" class="input" type="number" />
			<span asp-validation-for="DM" class="text-danger"></span>
		</div>
		<button type="submit" class="btn primary">Register</button>
	</form>
</div>

